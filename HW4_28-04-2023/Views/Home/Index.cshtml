@{
    ViewData["Title"] = "Home Page";
}

<h1>Добро пожаловать в первую в мире социальную сеть, объединяющую разработчиков ASP.NET</h1>

<form method="post" action="Home/Congrats">
    <div>
        <label for="name">Имя:</label>
        <input id="name" name="name" type="text" required />
    </div>

    <div>
        <label for="email">Email:</label>
        <input id="email" name="email" type="email" required />
    </div>

    <div>
        <input type="submit" value="Стать разработчиком" />
    </div>
</form>

